{
  "manifest_version": 3,
  "name": "PhisherShield",
  "version": "1.0",
  "description": "An anti-phishing browser extension.",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/contentBundle.js"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  },
  "background": {
    "service_worker": "dist/backgroundBundle.js"
  },
  "permissions": [
   "activeTab",
    "scripting",
    "storage",
    "webRequest",
    "tabs",
    "webNavigation"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "icons/*",
        "dist/popupBundle.js",
        "dist/popup.css"
      ],
      "matches": [ "<all_urls>" ]
    }
  ]
}